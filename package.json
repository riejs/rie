{
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "nodemon --exec npm run dev:rie",
    "dev:rie": "node --inspect=5858 -r ts-node/register ./examples/dev",
    "build": "yarn workspaces foreach -pt run build",
    "test": "jest",
    "cov": "jest --coverage"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "axios": "^0.21.1",
    "eslint": "^7.9.0",
    "eslint-config-tencent": "1.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "koa": "^2.13.0",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.4",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.3",
    "vuex": "^3.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "git add ."
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules",
      "packages/**/*.d.ts"
    ],
    "watch": [
      "examples/*.ts",
      "packages/**/*.ts"
    ],
    "ext": "ts"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:riejs/rie.git",
    "directory": "."
  }
}
